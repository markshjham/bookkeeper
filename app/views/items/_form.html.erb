<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="transaction-grid grid-container">
    <div class="label">Transaction date</div>
    <div class="label">Description</div>
    <div class="label">Debit</div>
    <div class="label">Amount</div>
    <div class="label">Category</div>
    <div class="label">Subcategory</div>
    <div class="label"></div>
    <div><%= form.date_select :transaction_date, id: :item_transaction_date %></div>
    <div><%= form.text_field :description, id: :item_description %></div>
    <div><%= form.check_box :debit, id: :item_debit %></div>
    <div><%= form.text_field :amount, id: :item_amount %></div>
    <div>
      <input class="awesomplete" list="category-list" />
      <datalist id="category-list">
        <% @categories.each do |category| %>
          <option><%= category.category %></option>
        <% end %>
      </datalist>
    </div>
    <div>
      <input class="awesomplete" list="subcategory-list" />
      <datalist id="subcategory-list">
        <% @subcategories.each do |subcategory| %>
          <option><%= subcategory.subcategory %></option>
        <% end %>
      </datalist>
    </div>
    <div><div class="actions"><%= form.submit %></div></div>
  </div>
<% end %>
